---
import BaseLayout from '@layouts/BaseLayout.astro';
import MasterclassCard from '@components/MasterclassCard.astro';
import FadeIn from '@components/FadeIn';
import { masterclasses } from '@data/masterclasses';
---

<BaseLayout 
  title="Masterclasses" 
  description="Join our professional beauty masterclasses and learn advanced techniques in skincare, brows, and SPMU."
>
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <FadeIn client:load>
        <h1 class="text-4xl md:text-5xl font-heading font-bold text-dark-brown mb-4 text-center">
          Masterclasses
        </h1>
        <p class="text-dark-brown/70 text-center mb-12 max-w-2xl mx-auto">
          Elevate your skills with our comprehensive beauty masterclasses. 
          Learn from industry experts and master advanced techniques.
        </p>
      </FadeIn>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
        {masterclasses.map((masterclass, index) => (
          <FadeIn client:load delay={index * 0.1}>
            <MasterclassCard masterclass={masterclass} />
          </FadeIn>
        ))}
      </div>

      <FadeIn client:load delay={0.4}>
        <div class="mt-16 text-center bg-gradient-to-r from-gold/10 to-nude-beige/20 rounded-2xl p-12">
          <h2 class="text-2xl font-heading font-semibold text-dark-brown mb-4">
            Have Questions About Our Masterclasses?
          </h2>
          <p class="text-dark-brown/70 mb-6">
            Contact us to learn more about our training programs.
          </p>
          <a 
            href="/contact" 
            class="inline-block bg-gold text-white px-8 py-4 rounded-full text-lg font-medium hover:bg-gold/90 transition-colors"
          >
            Contact Us
          </a>
        </div>
      </FadeIn>
    </div>
  </section>
</BaseLayout>

