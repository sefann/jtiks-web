---
import BaseLayout from '@layouts/BaseLayout.astro';
import FadeIn from '@components/FadeIn';
import { services } from '@data/services';

// Placeholder Google Appointment Schedule URL
// Replace with your actual Google Appointment Schedule embed URL
const googleAppointmentUrl = 'https://calendar.google.com/calendar/appointments/schedules/YOUR_SCHEDULE_ID';
---

<BaseLayout 
  title="Booking" 
  description="Book your appointment at JTIKS. Select your preferred date and time, then secure your booking with a deposit."
>
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 max-w-5xl">
      <FadeIn client:load>
        <h1 class="text-4xl md:text-5xl font-heading font-bold text-dark-brown mb-4 text-center">
          Book Your Appointment
        </h1>
        <p class="text-dark-brown/70 text-center mb-12 max-w-2xl mx-auto">
          Follow these simple steps to secure your appointment with us.
        </p>
      </FadeIn>

      <!-- Booking Steps -->
      <FadeIn client:load delay={0.1}>
        <div class="mb-12">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <div class="bg-nude-beige/20 rounded-2xl p-6">
              <div class="flex items-center gap-4 mb-4">
                <div class="w-10 h-10 bg-blush-pink text-white rounded-full flex items-center justify-center font-heading font-bold">
                  1
                </div>
                <h3 class="text-xl font-heading font-semibold text-dark-brown">Select Date & Time</h3>
              </div>
              <p class="text-dark-brown/70">
                Choose your preferred date and time from the calendar below. 
                Available slots are shown in real-time.
              </p>
            </div>

            <div class="bg-blush-pink/10 rounded-2xl p-6">
              <div class="flex items-center gap-4 mb-4">
                <div class="w-10 h-10 bg-gold text-white rounded-full flex items-center justify-center font-heading font-bold">
                  2
                </div>
                <h3 class="text-xl font-heading font-semibold text-dark-brown">Secure Booking</h3>
              </div>
              <p class="text-dark-brown/70">
                Complete your booking by paying a deposit using our secure payment system. 
                Your appointment will be confirmed immediately.
              </p>
            </div>
          </div>
        </div>
      </FadeIn>

      <!-- Google Appointment Schedule -->
      <FadeIn client:load delay={0.2}>
        <div class="mb-12">
          <h2 class="text-2xl font-heading font-semibold text-dark-brown mb-4 text-center">
            Step 1: Select Your Date & Time
          </h2>
          <div class="bg-white border border-nude-beige/30 rounded-2xl p-4 overflow-hidden">
            <iframe
              src={googleAppointmentUrl}
              width="100%"
              height="600"
              frameborder="0"
              class="rounded-lg"
              title="Google Appointment Schedule"
            ></iframe>
          </div>
          <p class="text-sm text-dark-brown/60 text-center mt-4">
            If the calendar doesn't load, please contact us directly.
          </p>
        </div>
      </FadeIn>

      <!-- Deposit Payment Section -->
      <FadeIn client:load delay={0.3}>
        <div>
          <h2 class="text-2xl font-heading font-semibold text-dark-brown mb-6 text-center">
            Step 2: Secure Your Booking with Deposit
          </h2>
          <p class="text-dark-brown/70 text-center mb-8 max-w-2xl mx-auto">
            After selecting your appointment time, secure your booking by paying a deposit. 
            Click on the service you've booked below to proceed with payment.
          </p>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {services.map((service) => (
              <div class="bg-white border border-nude-beige/30 rounded-2xl p-6 hover:shadow-md transition-shadow">
                <h3 class="text-lg font-heading font-semibold text-dark-brown mb-2">{service.title}</h3>
                <p class="text-sm text-dark-brown/60 mb-4">{service.duration}</p>
                <a
                  href="https://paystack.com/pay/booking-deposit"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block w-full bg-gold text-white text-center px-4 py-2 rounded-full hover:bg-gold/90 transition-colors text-sm font-medium"
                >
                  Pay Deposit
                </a>
              </div>
            ))}
          </div>

          <div class="mt-8 bg-nude-beige/20 rounded-2xl p-6 text-center">
            <p class="text-dark-brown/70 text-sm">
              <strong>Note:</strong> Deposit amounts vary by service. 
              The remaining balance can be paid on the day of your appointment.
            </p>
          </div>
        </div>
      </FadeIn>
    </div>
  </section>
</BaseLayout>

