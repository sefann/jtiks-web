---
import BaseLayout from '@layouts/BaseLayout.astro';
import ContactBanner from '@components/ContactBanner.astro';
import FadeIn from '@components/FadeIn';

// Placeholder Formspree form ID - replace with your actual Formspree form ID
const formspreeFormId = 'YOUR_FORMSPREE_FORM_ID';
const formAction = `https://formspree.io/f/${formspreeFormId}`;
---

<BaseLayout 
  title="Contact" 
  description="Get in touch with JTIKS. We're here to answer your questions and help you book your appointment."
>
  <ContactBanner />

  <div class="border-t border-nude-beige/30"></div>

  <section class="py-20 relative overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img 
        src="/images/27.png" 
        alt="" 
        class="w-full h-full object-cover"
        aria-hidden="true"
      />
      <div class="absolute inset-0 bg-white/80"></div>
    </div>
    <div class="container mx-auto px-4 max-w-4xl relative z-10">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <FadeIn client:load delay={0.1}>
          <div class="md:border-r md:border-nude-beige/30 md:pr-12">
            <h2 class="text-2xl font-heading font-semibold text-dark-brown mb-6">Send us a Message</h2>
            <form action={formAction} method="POST" class="space-y-4">
              <div>
                <label for="name" class="block text-sm font-medium text-dark-brown mb-2">
                  Name
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-xl border border-nude-beige/50 focus:border-blush-pink focus:outline-none transition-colors"
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-dark-brown mb-2">
                  Email
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-xl border border-nude-beige/50 focus:border-blush-pink focus:outline-none transition-colors"
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium text-dark-brown mb-2">
                  Phone (Optional)
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-4 py-3 rounded-xl border border-nude-beige/50 focus:border-blush-pink focus:outline-none transition-colors"
                />
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-dark-brown mb-2">
                  Message
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full px-4 py-3 rounded-xl border border-nude-beige/50 focus:border-blush-pink focus:outline-none transition-colors resize-none"
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full bg-blush-pink text-white px-6 py-3 rounded-full font-medium hover:bg-blush-pink/90 transition-colors"
              >
                Send Message
              </button>
            </form>
          </div>
        </FadeIn>

        <!-- Contact Information -->
        <FadeIn client:load delay={0.2}>
          <div class="md:pl-12">
            <h2 class="text-2xl font-heading font-semibold text-dark-brown mb-6">Get in Touch</h2>
            
            <div class="space-y-6 mb-8">
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-nude-beige/30 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-dark-brown" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-dark-brown mb-1">Email</h3>
                  <a href="mailto:info@jtiks.com" class="text-dark-brown/70 hover:text-gold transition-colors">
                    info@jtiks.com
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-nude-beige/30 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-dark-brown" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-dark-brown mb-1">Phone</h3>
                  <a href="tel:+2341234567890" class="text-dark-brown/70 hover:text-gold transition-colors">
                    +234 123 456 7890
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-nude-beige/30 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-dark-brown" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-dark-brown mb-1">WhatsApp</h3>
                  <a 
                    href="https://wa.me/2341234567890" 
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-dark-brown/70 hover:text-gold transition-colors inline-flex items-center gap-2"
                  >
                    Chat with us
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                </div>
              </div>
            </div>

            <div class="bg-nude-beige/20 rounded-2xl p-6">
              <h3 class="font-heading font-semibold text-dark-brown mb-3">Business Hours</h3>
              <ul class="space-y-2 text-sm text-dark-brown/70">
                <li class="flex justify-between">
                  <span>Monday - Friday</span>
                  <span>9:00 AM - 6:00 PM</span>
                </li>
                <li class="flex justify-between">
                  <span>Saturday</span>
                  <span>10:00 AM - 4:00 PM</span>
                </li>
                <li class="flex justify-between">
                  <span>Sunday</span>
                  <span>Closed</span>
                </li>
              </ul>
            </div>
          </div>
        </FadeIn>
      </div>
    </div>
  </section>
</BaseLayout>

