---
import BaseLayout from '@layouts/BaseLayout.astro';
import TestimonialSlider from '@components/TestimonialSlider.tsx';
import ImageSlider from '@components/ImageSlider.tsx';
import PortraitVideo from '@components/PortraitVideo.tsx';
import FadeIn from '@components/FadeIn';
import { services } from '@data/services';
import { testimonials } from '@data/testimonials';

// Service images
const skincareImages = [
  '/images/skin1.png',
  '/images/skin2.png',
  '/images/skin3.png',
  '/images/skin4.png',
];

const spmuImages = [
  '/images/spmu1.png',
  '/images/spmu2.png',
  '/images/spmu3.png',
  '/images/spmu4.png',
];

// Brows video
const browsVideo = '/images/tiks-vid.MP4';
const browsVideoPoster = '/images/tiks1.PNG';

const skincareServices = services.filter(s => s.category === 'skincare');
const browsServices = services.filter(s => s.category === 'brows');
const spmuServices = services.filter(s => s.category === 'spmu');
---

<BaseLayout title="Home" description="JTIKS - Premium Beauty Services. Experience luxury skincare, SPMU, brows, and masterclasses.">
  <!-- Hero Section -->
  <section class="relative py-20 md:py-32 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <video
        autoplay
        loop
        muted
        playsinline
        class="w-full h-full object-cover"
        aria-hidden="true"
      >
        <source src="/images/tiks-vid.MP4" type="video/mp4" />
      </video>
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <FadeIn client:load>
          <h1 class="text-4xl md:text-6xl font-heading font-bold text-white mb-6 text-balance">
            Elevate Your Beauty Journey
          </h1>
          <p class="text-lg md:text-xl text-white/90 mb-8 text-balance">
            Discover premium beauty services crafted with elegance and expertise. 
            From luxurious skincare to transformative SPMU, we bring out your natural radiance.
          </p>
          <a 
            href="/booking" 
            class="inline-block bg-blush-pink text-white px-8 py-4 rounded-full text-lg font-medium hover:bg-blush-pink/90 transition-colors shadow-lg"
          >
            Book Your Appointment
          </a>
        </FadeIn>
      </div>
    </div>
  </section>

  <!-- Services Preview & Skincare Section -->
  <section class="py-12 border-t border-nude-beige/30 relative overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img 
        src="/images/27.png" 
        alt="" 
        class="w-full h-full object-cover"
        aria-hidden="true"
      />
      <div class="absolute inset-0 bg-white/80"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <FadeIn client:load>
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-dark-brown text-center mb-2">
          Our Services
        </h2>
        <p class="text-dark-brown/70 text-center mb-8 max-w-2xl mx-auto">
          Experience our range of premium beauty treatments designed to enhance your natural beauty.
        </p>
      </FadeIn>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center max-w-6xl mx-auto mt-8">
            <FadeIn client:load>
              <div>
                <h3 class="text-2xl md:text-3xl font-heading font-bold text-dark-brown mb-3">
                  Skincare
                </h3>
              <p class="text-dark-brown/70 mb-4 leading-relaxed">
                Indulge in our luxurious skincare treatments designed to rejuvenate and restore your skin's natural radiance. 
                Our expert estheticians use premium products and advanced techniques to address your unique skin concerns, 
                leaving you with a glowing, healthy complexion.
              </p>
              <p class="text-dark-brown/70 mb-6 leading-relaxed">
                From deep hydration facials to advanced anti-aging therapies, we offer comprehensive skincare solutions 
                tailored to your individual needs.
              </p>
              <a 
                href="/services#skincare" 
                class="inline-block bg-blush-pink text-white px-6 py-3 rounded-full text-base font-medium hover:bg-blush-pink/90 transition-colors"
              >
                Learn More
              </a>
            </div>
          </FadeIn>
          <FadeIn client:load delay={0.2}>
            <ImageSlider client:load images={skincareImages} alt="Skincare services" />
          </FadeIn>
        </div>
    </div>
  </section>

  <!-- Brows Section -->
  <section class="py-12 border-t border-nude-beige/30 relative">
    <div class="absolute inset-0 z-0">
      <img 
        src="/images/16.png" 
        alt="" 
        class="w-full h-full object-cover"
        aria-hidden="true"
      />
      <div class="absolute inset-0 bg-black/60"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center max-w-6xl mx-auto">
            <FadeIn client:load delay={0.1}>
              <div>
                <h3 class="text-2xl md:text-3xl font-heading font-bold text-white mb-3">
                  Brows
                </h3>
                <p class="text-white/90 mb-4 leading-relaxed">
                  Transform your brows with our expert shaping, tinting, and microblading services. 
                  Our skilled technicians work with you to create the perfect brow shape that enhances your natural features 
                  and frames your face beautifully.
                </p>
                <p class="text-white/90 mb-4 leading-relaxed">
                  Whether you're looking for a subtle enhancement or a complete brow transformation, 
                  we offer professional solutions that deliver stunning, long-lasting results.
                </p>
                <p class="text-white/90 mb-6 leading-relaxed">
                  Our brow artistry combines precision techniques with artistic vision, ensuring that each client receives 
                  personalized attention and results that complement their unique facial structure. From natural-looking 
                  enhancements to bold, defined arches, we create brows that frame your eyes and elevate your entire look.
                </p>
                <a 
                  href="/services#brows" 
                  class="inline-block bg-blush-pink text-white px-6 py-3 rounded-full text-base font-medium hover:bg-blush-pink/90 transition-colors"
                >
                  Learn More
                </a>
              </div>
            </FadeIn>
            <FadeIn client:load delay={0.3}>
              <PortraitVideo client:load videoSrc={browsVideo} poster={browsVideoPoster} alt="Brows services video" />
            </FadeIn>
        </div>
    </div>
  </section>

  <!-- Divider -->
  <div class="border-t border-nude-beige/30"></div>

  <!-- SPMU Section -->
  <section class="py-12 border-t border-nude-beige/30 relative overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img 
        src="/images/27.png" 
        alt="" 
        class="w-full h-full object-cover"
        aria-hidden="true"
      />
      <div class="absolute inset-0 bg-white/80"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center max-w-6xl mx-auto">
        <FadeIn client:load delay={0.2}>
          <div>
            <h3 class="text-2xl md:text-3xl font-heading font-bold text-dark-brown mb-3">
              Semi-Permanent Makeup (SPMU)
            </h3>
            <p class="text-dark-brown/70 mb-4 leading-relaxed">
              Wake up every day with perfectly defined features. Our semi-permanent makeup services include 
              lip blush, eyeliner enhancement, and more. Using advanced techniques and premium pigments, 
              we create natural-looking results that enhance your beauty effortlessly.
            </p>
            <p class="text-dark-brown/70 mb-6 leading-relaxed">
              Save time on your daily makeup routine while maintaining a polished, professional appearance 
              with our long-lasting SPMU treatments.
            </p>
            <a 
              href="/services#spmu" 
              class="inline-block bg-blush-pink text-white px-6 py-3 rounded-full text-base font-medium hover:bg-blush-pink/90 transition-colors"
            >
              Learn More
            </a>
          </div>
        </FadeIn>
        <FadeIn client:load delay={0.4}>
          <ImageSlider client:load images={spmuImages} alt="SPMU services" />
        </FadeIn>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-8 relative overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img 
        src="/images/back-one.png" 
        alt="" 
        class="w-full h-full object-cover"
        aria-hidden="true"
        style="min-height: 100%;"
      />
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <FadeIn client:load>
        <h2 class="text-2xl md:text-3xl font-heading font-bold text-dark-brown text-center mb-2">
          What Our Clients Say
        </h2>
        <p class="text-dark-brown/70 text-center mb-6 max-w-2xl mx-auto text-sm">
          Don't just take our word for it - hear from our satisfied clients.
        </p>
      </FadeIn>
      <TestimonialSlider client:load testimonials={testimonials} />
    </div>
  </section>
</BaseLayout>

