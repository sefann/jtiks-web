---
import type { Service } from '@data/services';

interface Props {
  service: Service;
  showImage?: boolean;
  showLearnMore?: boolean;
}

const { service, showImage = true, showLearnMore = false } = Astro.props;
---

<div class="bg-white rounded-2xl overflow-hidden shadow-sm border border-nude-beige/30 hover:shadow-md transition-shadow">
  <div class="flex flex-col h-full">
    {showImage && (
      <div class="w-full h-64 bg-nude-beige/20 flex-shrink-0">
        <img 
          src={service.image} 
          alt={service.title}
          class="w-full h-full object-cover"
          loading="lazy"
        />
      </div>
    )}
    <div class="p-6 flex flex-col flex-grow">
      <h3 class="text-xl font-heading font-semibold text-dark-brown mb-2">{service.title}</h3>
      <p class="text-dark-brown/70 text-sm mb-4 flex-grow">{service.description}</p>
      <div class="flex items-center justify-between mt-auto">
        <span class="text-sm text-dark-brown/60">Duration: {service.duration}</span>
        {showLearnMore && (
          <button
            data-service-id={service.id}
            class="bg-blush-pink text-white px-4 py-2 rounded-full text-sm font-medium hover:bg-blush-pink/90 transition-colors"
          >
            Learn More
          </button>
        )}
      </div>
    </div>
  </div>
</div>
