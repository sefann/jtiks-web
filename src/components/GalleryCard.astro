---
import type { GalleryItem } from '@data/gallery';

interface Props {
  item: GalleryItem;
}

const { item } = Astro.props;
---

<div class="relative group cursor-pointer rounded-2xl overflow-hidden aspect-square bg-nude-beige/20">
  <img 
    src={item.image} 
    alt={item.title}
    class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
    loading="lazy"
  />
  <div class="absolute inset-0 bg-gradient-to-t from-dark-brown/80 via-dark-brown/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity">
    <div class="absolute bottom-0 left-0 right-0 p-4">
      <h3 class="text-white font-heading font-semibold">{item.title}</h3>
      <p class="text-white/80 text-sm capitalize">{item.category}</p>
    </div>
  </div>
</div>

